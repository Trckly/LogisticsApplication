<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.dialog.AddCargoDialogController" prefWidth="420" prefHeight="400">
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="300">
        <TextField fx:id="nameField" promptText="Cargo Name" prefWidth="300"/>
        <TextField fx:id="weightField" promptText="Weight" prefWidth="300"/>
        <TextField fx:id="volumeField" promptText="Volume" prefWidth="300"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Cancel" onAction="#handleCancel" prefWidth="150" style="-fx-background-color: rgba(238,0,0,0.4)"/>
            <Button text="Save" onAction="#handleSave" prefWidth="150" style="-fx-background-color: rgba(0,238,0,0.4)"/>
        </HBox>
    </VBox>
</AnchorPane>