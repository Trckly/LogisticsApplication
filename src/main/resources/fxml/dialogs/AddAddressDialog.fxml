<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.dialog.AddAddressDialogController" prefWidth="420" prefHeight="400">
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="300">
        <TextField fx:id="provinceField" promptText="Province" prefWidth="300"/>
        <TextField fx:id="settlementField" promptText="Settlement" prefWidth="300"/>
        <TextField fx:id="streetField" promptText="Street" prefWidth="300"/>
        <TextField fx:id="streetNumberField" promptText="Street Number" prefWidth="300"/>
        <TextField fx:id="companyNameField" promptText="Company Name" prefWidth="300"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Cancel" onAction="#handleCancel" prefWidth="150" style="-fx-background-color: rgba(238,0,0,0.4)"/>
            <Button text="Save" onAction="#handleSave" prefWidth="150" style="-fx-background-color: rgba(0,238,0,0.4)"/>
        </HBox>
    </VBox>
</AnchorPane>
